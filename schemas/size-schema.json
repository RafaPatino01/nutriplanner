{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "/schemas/size",
    "title": "size",
    "description": "Esquema de cantidades para ingredientes",
    "type": "object",
    "properties": {
        "amount": {
            "type": "number"
        },
        "unit": {
            "description": "Unidades comunes para cocina de https://es.wikibooks.org/s/1tx",
            "enum": [
                "gramo",
                "onza",
                "litro",
                "mililitro",
                "taza",
                "cucharada",
                "cucharadita"
            ]
        }
    },
    "required": ["amount", "unit"]
}
